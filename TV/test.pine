// ROUNDS
f_round(_val, _decimals) =>
    if _decimals == -1
        _val
    else
        _p = pow(10, _decimals)
        round(abs(_val) * _p) / _p * sign(_val)

f_strHelp(_prefix, _var, _round) =>
    _res = tostring(f_round(_var, _round))
    _prefix + ' ' + _res + nl

